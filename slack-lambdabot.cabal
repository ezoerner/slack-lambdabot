-- Initial slack-lambdabot.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

name:                slack-lambdabot
version:             2.0.1
-- synopsis:            
-- description:         
license:             AllRightsReserved
author:              Eric Zoerner
maintainer:          eric.zoerner@gmail.com
build-type:          Simple
extra-source-files:  ChangeLog.md, README.md
cabal-version:       >=1.10

executable slack-lambdabot
  main-is:             Main.hs
  other-modules:       
      Main
      Modules
  other-extensions:    DataKinds, DeriveAnyClass, DeriveGeneric, GADTs, LambdaCase, OverloadedStrings, TemplateHaskell
  build-depends:
      base >=4.9 && <4.10
      , utf8-string >=1.0 && <1.1
      , deepseq >=1.4 && <1.5
      , html-entities
      , text >=1.2 && <1.3
      , lambdabot-core >=5.1 && <5.2
      , parsec >=3.1 && <3.2
      , lambdabot-haskell-plugins >=5.1 && <5.2    
      , lambdabot-haskell-plugins
      , lambdabot-irc-plugins
      , lambdabot-misc-plugins
      , lambdabot-novelty-plugins
      , lambdabot-reference-plugins
      , lambdabot-social-plugins
      , lambdabot-trusted
      , lens
      , parsec
      , silently
      , slack-api
      , text
      , transformers
      , utf8-string
      , random
      , containers
      , bytestring
      , array

  hs-source-dirs:      src
  default-extensions:  DeriveDataTypeable EmptyDataDecls FlexibleContexts FlexibleInstances GADTs GeneralizedNewtypeDeriving LambdaCase MultiParamTypeClasses NamedFieldPuns NoMonomorphismRestriction OverloadedStrings PackageImports QuasiQuotes RankNTypes RecordWildCards ScopedTypeVariables StandaloneDeriving TemplateHaskell TupleSections TypeFamilies ViewPatterns
  ghc-options:         -Wall -Werror -fwarn-tabs -threaded -O2 -rtsopts -with-rtsopts=-N -with-rtsopts=-T
  default-language:    Haskell2010
